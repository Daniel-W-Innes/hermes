{
  "openapi": "3.0.3",
  "info": {
    "title": "Hermes",
    "description": "Simple messaging service",
    "version": "1.0.0"
  },
  "paths": {
    "/": {
      "get": {
        "tags": [
          "server"
        ],
        "description": "get server health",
        "responses": {
          "200": {
            "description": "sever is running",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "ok"
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": [
          "user"
        ],
        "description": "add a user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "user added",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JWT"
                }
              }
            }
          },
          "400": {
            "description": "user supplied bad information",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "user already exists"
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "user"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "description": "login to get a jwt",
        "responses": {
          "200": {
            "description": "login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JWT"
                }
              }
            }
          },
          "401": {
            "description": "login failed",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "username or password is not right"
                }
              }
            }
          }
        }
      }
    },
    "/message": {
      "post": {
        "tags": [
          "message"
        ],
        "security": [
          {
            "bearer": []
          }
        ],
        "description": "add message",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Message"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "add message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      },
      "get": {
        "description": "get messages",
        "tags": [
          "message"
        ],
        "security": [
          {
            "bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "messages user is authorized to see",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "messages": {
                      "$ref": "#/components/schemas/Message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "bad token received",
        "content": {
          "text/plain": {
            "schema": {
              "type": "string",
              "example": "missing bearer in header"
            }
          }
        }
      }
    },
    "schemas": {
      "Message": {
        "type": "object",
        "properties": {
          "message": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "owner_id": {
                "type": "integer"
              },
              "text": {
                "type": "string"
              },
              "palindrome": {
                "type": "boolean"
              }
            }
          },
          "recipient_ids": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        }
      },
      "JWT": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  }
}
